<!DOCTYPE html>
<html>
	<head>
		<title>Articles</title>
		<meta charset="UTF-8">
	</head>
	<body>
		<h1><center> Les Articles </center></h1>

		<div class="container"> <!-- responsive design -->
			<ul class="collapsible popout" data-collapsible="accordion">
				<% articles.forEach(function(art) { %>
					<li>
						<div class="collapsible-header"><%- art.Nom %></div>
						<div class="collapsible-body"><p><%- art.Contenu %></p></div>
					</li>
				<% }); %>
			</ul> 
			</br>
			<div class="card-panel white">
				<h5> Ajouter un article </h5>
				<form action="/newArticle" method="post">
					<div class="input-field">
						<input id="title" type="text" class="validate" name="title">
						<label for="title">Nom de l'article</label>
					</div>
					<div class="input-field">
			          <textarea id="content" class="materialize-textarea" name="content"></textarea>
			          <label for="content">Contenu</label>
			        </div>
			        <button class="waves-effect waves-light btn grey darken-2" type="submit">Ajouter</button>
				</form>
			</div>
		</div>
	</body>
	<footer>
		<script> $(document).ready(function(){
    $('.collapsible').collapsible();
  }); </script>
	</footer>
</html>